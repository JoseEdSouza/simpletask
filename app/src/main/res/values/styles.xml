    <style name="MaterialTimePickerTheme" parent="@style/ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/task_theme</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/task_theme</item>
    </style>

